<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Spinner
        android:id="@+id/square_range_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:alpha="50"
        android:prompt="@string/range_prompt" />
   
    <Button 
        android:id="@+id/square_talk"
        android:text="吼吼"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
  		android:layout_alignBottom="@+id/square_range_select"
        android:onClick="squareTalk"/>
	<ListView 
	    android:id="@+id/square_talk_list"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/square_range_select"
	    android:layout_marginTop="15dp"
	    ></ListView>

	<android.gesture.GestureOverlayView
	    android:id="@+id/gestureOverlayView1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/square_range_select"
	    android:layout_marginLeft="44dp" >
	</android.gesture.GestureOverlayView>

</RelativeLayout>